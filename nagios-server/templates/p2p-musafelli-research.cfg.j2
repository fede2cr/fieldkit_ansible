define host {
  use   linux-server
  host_name  {{ p2p_musafelli_research_hostname }}
  alias     Ethernet Bridge from Musafelli to Research
  address {{ p2p_musafelli_research_ip }}
  max_check_attempts 5
  parents p2p-research-musafelli
}


define service{
        use                             generic-service
        host_name                       {{ p2p_musafelli_research_hostname }}
        service_description             PING
        check_command                   check_ping!100.0,20%!500.0,60%
        }
define service{
        use                     generic-service
        host_name               {{ p2p_musafelli_research_hostname }}
        service_description     Uptime  
        check_command           check_snmp!-C {{ p2p_snmp }} -o sysUpTime.0
        }

define service{
        use                     generic-service
        host_name               {{ p2p_musafelli_research_hostname }}
        service_description     Signal Strength
        check_command           check_snmp!-C {{ p2p_snmp }} -o 1.3.6.1.4.1.41112.1.4.5.1.5.1 -r 1 -m RFC1213-MIB -w -60: -c -70:
        }

define service{
        use                     generic-service
        host_name               {{ p2p_musafelli_research_hostname }}
        service_description     Frequency
        check_command           check_snmp!-C {{ p2p_snmp }} -o 1.3.6.1.4.1.41112.1.4.1.1.4.1 -r 1 -m RFC1213-MIB
        }
